extends header
block MainView
  fieldset(align="center")
    legend 새 link는 #{cursettitle} 아래에 만들어 집니다.
    form(action="/link/newlink/"+cursetid+"/"+cursettitle id="newlink" method="post" style="display:inline-block; margin:15px;")

      label Document link
        input(type="radio" name="linktype" value="document")
      br
      label Community link
        input(type="radio" name="linktype" value="community")
      br
      br
      label(for="title") Title :
        br
        input(type="text" name="title" id="title")
      br
      label(for="author")  원작자 :
        br
        input(type="text" name="author" id="author")
      br
      label(for="link") Link :
        br
        input(type="text" name="link" id="link" style="margin-bottom : 10px;")
      br
      br
      textarea(name="text" form="newlink" rows="4" cols="60") short comment about link...
      br
      input(type="submit" value="Create")
